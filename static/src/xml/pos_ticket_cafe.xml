<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-receipt')]" position="inside">
            <!-- CAFE Section - Only show if CUFE exists -->
            <t t-if="receipt.headerData and receipt.headerData.hka_cufe">
                <div class="cafe-section" style="margin-top: 15px; text-align: center; border-top: 2px dashed #000; padding-top: 10px;">
                    <strong>CAFE - Comprobante Auxiliar de Factura Electrónica</strong><br/>
                    <span style="font-size: 10px; word-break: break-all;">CUFE: <t t-esc="receipt.headerData.hka_cufe"/></span><br/>
                    <t t-if="receipt.headerData.hka_cufe_qr">
                        <img t-att-src="receipt.headerData.hka_cufe_qr" style="max-width: 100px; margin-top: 5px;"/>
                    </t>
                    <div style="font-size: 8px; margin-top: 3px;">Verifique en DGI Panamá</div>
                </div>
            </t>
        </xpath>
    </t>
</templates>